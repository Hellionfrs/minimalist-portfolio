---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experience">
  <ul class="work-list">
    {
      work.map(
        ({
          company,
          companyDescription,
          position,
          startDate,
          endDate,
          summary,
        }) => {
          return (
            <li>
              <header>
                <div>
                  <span class="company-header">
                    <h3>{company}</h3>
                    <p>{`(${companyDescription})`}</p>
                  </span>
                  <h4>{position}</h4>
                </div>
                <time>
                  {startDate}-{endDate}
                </time>
              </header>
              <body>
                <ul class="summary-dots">
                  {summary.map((e) => {
                    return (
                      <li>
                        <p>{e.dot}</p>
                      </li>
                    );
                  })}
                </ul>
              </body>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  .work-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    list-style: none;
  }
  header {
    display: flex;
    justify-content: space-between;
  }
  .company-header {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    align-items: end;
  }

  .company-header p {
    font-size: 0.9em;
    font-weight: 500;
    color: #666;
    opacity: 0.5;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  @media (max-width: 600px) {
    .company-header {
      display: flex;
      flex-direction: column;
      align-items: start;
      gap: 0rem;
    }

    header {
      justify-content: ;
    }
  }

  @media (min-width: 601px) {
  }

  header h3 {
    font-weight: 500;
    color: #111;
  }

  header h4 {
    font-weight: 400;
    color: #222;
  }

  time {
    font-size: 0.85rem;
    color: #555;
    padding-top: 0.45rem;
  }
  .summary-dots {
    padding-top: 0.5rem;
    padding-left: 1rem;
  }
</style>
