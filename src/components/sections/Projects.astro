---
import Section from "../Section.astro";
import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ name, isActive, description, url, highlights }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Take a look to ${name}`}>
                    {name}
                  </a>
                  {isActive && <span>&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highligh) => {
                  return <span>{highligh}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    list-style: none;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 0.5rem;
    border: 1px solid #f2f2f2;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 100%;
  }

  article header {
    flex: 1;
  }
  h3 span {
    color: rgb(0, 255, 64);
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }
  footer {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    font-size: 0.6rem;
  }

  footer span {
    display: inline-flex;
    border-radius: 6px;
    background: #eee;
    color: #000;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.4rem;
  }
</style>
