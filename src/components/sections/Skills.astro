---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 0.5rem;
    list-style: none;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: rgba(17, 24, 39, 0.8);
    color: white;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.4rem;
  }
</style>
